{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["./domain/*"],
      "@infra/*": ["./infra/*"],
      "@app/*": ["./app/*"]
    }
  },
  "include": ["jest.config.ts", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
